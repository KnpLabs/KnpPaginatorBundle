{% if pageCount > 1 %}
<div class="pagination">
    <ul>

    {% if previous is defined %}
        <li>
        {% if previous == 1 %}
            <a href="{{ path(firstPageRoute) }}">&laquo;&nbsp;Previous</a>
        {% else %}
            <a href="{{ path(otherPagesRoute, {(pageParameterName): previous}) }}">&laquo;&nbsp;Previous</a>
        {% endif %}
        </li>
    {% else %}
        <li class="disabled">
            <span>&laquo;&nbsp;Previous</span>
        </li>
    {% endif %}

    {% if startPage > 1 %}
        <li>
            <a href="{{ path(firstPageRoute) }}">1</a>
        </li>
        {% if startPage == 3 %}
            <li>
                <a href="{{ path(otherPagesRoute, {(pageParameterName): 2}) }}">2</a>
            </li>
        {% elseif startPage != 2 %}
        <li class="disabled">
            <span>&hellip;</span>
        </li>
        {% endif %}
    {% endif %}

    {% for page in pagesInRange %}	
        {% if page != current %}
			<li>
			{% if page == 1 %}
				<a href="{{ path(firstPageRoute) }}">{{ page }}</a>
			{% else %}
				<a href="{{ path(otherPagesRoute, {(pageParameterName): page}) }}">{{ page }}</a>
			{% endif %}    
			</li>
        {% else %}
            <li class="active">
                <span>{{ page }}</span>
            </li>
        {% endif %}

    {% endfor %}

    {% if pageCount > endPage %}
        {% if pageCount > (endPage + 1) %}
            {% if pageCount > (endPage + 2) %}
                <li class="disabled">
                    <span>&hellip;</span>
                </li>
            {% else %}
                <li>
                    <a href="{{ path(otherPagesRoute, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                </li>
            {% endif %}
        {% endif %}
        <li>
            <a href="{{ path(otherPagesRoute, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
        </li>
    {% endif %}

    {% if next is defined %}
        <li>
            <a href="{{ path(otherPagesRoute, {(pageParameterName): next}) }}">Next&nbsp;&raquo;</a>
        </li>
    {% else %}
        <li class="disabled">
            <span>Next&nbsp;&raquo;</span>
        </li>
    {% endif %}
    </ul>
</div>
{% endif %}
