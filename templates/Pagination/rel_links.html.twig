{% if pageCount > 1 %}
    {% if previous is defined %}
        <link rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" />
    {% endif %}

    {% if next is defined %}
        <link rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}" />
    {% endif %}
{% endif %}
